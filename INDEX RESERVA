       <!-- Firebase SDK (Com Autentica√ß√£o e Firestore) -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
        import { getFirestore, collection, getDocs, updateDoc, deleteDoc, doc, query, orderBy } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-firestore.js";
        import { getAuth, signInWithEmailAndPassword, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-auth.js";

        const firebaseConfig = {
            apiKey: "AIzaSyDZPIYOFtfmYEeeHGOCqzHsV1a206n0-cQ",
            authDomain: "iplay-65220.firebaseapp.com",
            projectId: "iplay-65220",
            storageBucket: "iplay-65220.firebasestorage.app",
            messagingSenderId: "264955612573",
            appId: "1:264955612573:web:f5a8b2c548962f6b7d7374",
            measurementId: "G-7MC7673WPH"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        // --- SISTEMA DE LOGIN SEGURO ---
        window.fazerLoginFirebase = async function(email, senha) {
            try {
                await signInWithEmailAndPassword(auth, email, senha);
            } catch (error) {
                console.error("Erro no login:", error);
                throw error; // Joga o erro para ser tratado no bot√£o
            }
        }

        window.fazerLogout = async function() {
            try {
                await signOut(auth);
                window.location.reload();
            } catch (error) {
                console.error("Erro ao sair:", error);
            }
        }

        // Monitora o estado da autentica√ß√£o (Logado ou N√£o)
        onAuthStateChanged(auth, (user) => {
            const loginScreen = document.getElementById('loginScreen');
            const mainContent = document.getElementById('mainContent');

            if (user) {
                // USU√ÅRIO LOGADO: Esconde login, mostra painel
                if(loginScreen) loginScreen.style.display = 'none';
                if(mainContent) mainContent.style.display = 'block';
                
                // Carrega os dados iniciais se a fun√ß√£o existir
                if(window.carregarTudo) window.carregarTudo();
                
                console.log("Admin logado:", user.email);
            } else {
                // USU√ÅRIO DESLOGADO: Mostra login, esconde painel
                if(loginScreen) loginScreen.style.display = 'flex';
                if(mainContent) mainContent.style.display = 'none';
            }
        });

        // --- FUN√á√ïES DE PEDIDOS (BANCO DE DADOS) ---
        
        // 1. Carregar Pedidos (CORRIGIDO: Removemos orderBy do Firestore e fazemos via JS)
        window.carregarPedidosFirebase = async function() {
            try {
                // Pega TODOS os documentos da cole√ß√£o 'pedidos' sem filtrar
                const snapshot = await getDocs(collection(db, "pedidos"));
                
                const lista = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
                
                console.log("Pedidos carregados do Firestore:", lista); // Log para debug

                // Ordena√ß√£o manual no Javascript (do mais novo para o mais antigo)
                return lista.sort((a,b) => {
                    // Tenta usar o timestamp do firebase, se n√£o tiver, usa 0
                    const ta = a?.timestamp?.seconds || 0;
                    const tb = b?.timestamp?.seconds || 0;
                    return tb - ta;
                });
            } catch (e) {
                console.error("Erro CR√çTICO ao buscar pedidos:", e);
                alert("Erro ao buscar pedidos no banco de dados. Verifique o console.");
                return [];
            }
        };

        // 2. Atualizar Status (Finalizar Pedido)
        window.atualizarStatusFirebase = async function(id, novoStatus) {
            try {
                await updateDoc(doc(db, "pedidos", id), { status: novoStatus });
            } catch (e) {
                console.error("Erro ao atualizar status:", e);
                alert("Erro ao atualizar. Voc√™ est√° logado?");
                throw e;
            }
        };
        
        // 3. Excluir Pedido
        window.excluirPedidoFirebase = async function(id) {
            try {
                await deleteDoc(doc(db, "pedidos", id));
            } catch (e) {
                console.error("Erro ao excluir:", e);
                alert("Erro ao excluir. Verifique se voc√™ tem permiss√£o.");
                throw e;
            }
        };
    </script>

