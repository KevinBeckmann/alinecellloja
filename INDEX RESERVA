    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
        import { getFirestore, collection, getDocs, updateDoc, doc, query, orderBy } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-firestore.js";
        import { getAnalytics } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-analytics.js";

        const firebaseConfig = {
            apiKey: "AIzaSyDZPIYOFtfmYEeeHGOCqzHsV1a206n0-cQ",
            authDomain: "iplay-65220.firebaseapp.com",
            projectId: "iplay-65220",
            storageBucket: "iplay-65220.firebasestorage.app",
            messagingSenderId: "264955612573",
            appId: "1:264955612573:web:f5a8b2c548962f6b7d7374",
            measurementId: "G-7MC7673WPH"
        };

        const app = initializeApp(firebaseConfig);
        const analytics = getAnalytics(app);
        const db = getFirestore(app);

        // Carrega pedidos (ordenado por data desc quando possível)
        async function carregarPedidos() {
            try {
                const q = query(collection(db, "pedidos"), orderBy("timestamp", "desc"));
                const querySnapshot = await getDocs(q);
                const pedidos = [];
                querySnapshot.forEach((doc) => pedidos.push({ id: doc.id, ...doc.data() }));
                return pedidos;
            } catch (e) {
                // fallback (caso timestamp não exista/índice etc)
                console.warn("Carregando pedidos sem orderBy (fallback):", e);
                try {
                    const querySnapshot = await getDocs(collection(db, "pedidos"));
                    const pedidos = [];
                    querySnapshot.forEach((doc) => pedidos.push({ id: doc.id, ...doc.data() }));
                    // ordena no client se tiver timestamp
                    pedidos.sort((a,b) => {
                        const ta = a?.timestamp?.seconds ? a.timestamp.seconds*1000 : (typeof a.timestamp === 'number' ? a.timestamp : 0);
                        const tb = b?.timestamp?.seconds ? b.timestamp.seconds*1000 : (typeof b.timestamp === 'number' ? b.timestamp : 0);
                        return tb - ta;
                    });
                    return pedidos;
                } catch (err) {
                    console.error("Erro ao carregar pedidos: ", err);
                    return [];
                }
            }
        }

        // Marcar como atendido
        async function marcarAtendido(pedidoId) {
            try {
                await updateDoc(doc(db, "pedidos", pedidoId), { status: "atendido" });
                alert("Pedido marcado como atendido!");
            } catch (e) {
                console.error("Erro ao atualizar: ", e);
            }
        }

        // Torne global
        window.carregarPedidos = carregarPedidos;
        window.marcarAtendido = marcarAtendido;
    </script>

